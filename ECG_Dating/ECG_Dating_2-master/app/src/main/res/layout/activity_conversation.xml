<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ConversationActivity">

    <Chronometer
        android:id="@+id/timer_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_conversation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="BPM: --"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="질문"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_balance_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="밸런스 게임"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_ideal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이상형 월드컵"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_end_dating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개팅 종료"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FF5252" /> </RelativeLayout>